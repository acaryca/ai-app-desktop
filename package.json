{
  "name": "ai-app-desktop",
  "productName": "AI Chat",
  "description": "AI Chat by ACARY",
  "version": "1.0.5",
  "main": "main.js",
  "author": {
    "name": "ACARY",
    "email": "support@acary.ca"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "package": "electron-builder --win --x64",
    "package:win": "electron-builder --win --x64",
    "package:linux": "electron-builder --linux --x64",
    "package:mac": "electron-builder --mac --x64",
    "convert-icon": "node convert-icon.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/acaryca/ai-app-desktop.git"
  },
  "keywords": [
    "electron",
    "tray",
    "chat"
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/acaryca/ai-app-desktop/issues"
  },
  "homepage": "https://github.com/acaryca/ai-app-desktop#readme",
  "dependencies": {
    "electron-log": "^5.3.3",
    "electron-store": "^10.0.1",
    "electron-updater": "^6.6.2"
  },
  "build": {
    "appId": "ca.acary.app.ai.chat",
    "productName": "AI Chat",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "assets/icon.png",
      "category": "Utility"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.utilities",
      "darkModeSupport": true
    },
    "dmg": {
      "format": "UDBZ"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "acaryca",
        "repo": "ai-app-desktop"
      }
    ]
  },
  "devDependencies": {
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "svg2png": "^4.1.1",
    "to-ico": "^1.1.5"
  }
}
